<%= simple_form_for(@post, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :title, as: :text, input_html: { rows: "3" } %>
    <%= f.input :content %>
    <%= f.input :posted %>
  
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
